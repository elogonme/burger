<h1>Eat-Da-Burger!</h1>


<div class="row">
  <div class="col-sm-6">
    <h3 class="text-secondary">Ready to devour!</h2>
    <ul class="list-group">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

<div class="col-sm-6">
  <h3 class="text-secondary">Devoured Burgers</h2>
  <ul class="list-group">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>



<h3 class="text-secondary mt-3">
  <i class="material-icons fs-2">fastfood</i>
  Add a Burger!
</h2>
<form id="create-form">

  <div class="form-group">
    <textarea type="text" name="burger" id="burger" class="col-12 col-md-6 mb-2"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Add Burger</button>
  <p class="text-secondary mt-2">Enter the burger you want to eat and click Add button</p>
</form>
